//- colors
$text-primary-color = #656565

footer
	padding 10% 0 5% 0
	display: flex
	background: #000000
	flex-direction: column
	align-items center
	color:$text-primary-color
	text-align center
	gap 70px
	img
		opacity: 0.25
	.sponsors
		display flex
		width: 50%
		justify-content space-between
		align-item flex-start
		gap 20px
		div
			 display inline-block
			img
				object-fit contain
				max-width 100%
	.info
		font-size: 10px
		#footer_logo
			margin-bottom 10px
			height:40px
			width:40px
	.author
		font-size 10px
		color: white
		
@media (max-width: 600px)
	footer
		gap 0
		.sponsors
			flex-direction column
			align-items center
			justify-content flex-start
			max-width 30%			
			div
				display inline-block
				height 100px 
		.author
			margin-top 60px