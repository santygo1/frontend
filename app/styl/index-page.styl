main.index
	section
		display flex
		align-items center
		justify-content center
		overflow hidden
	
	.banner
		color: white
		position relative
		overflow hidden
		.c
			display inline-block
			position absolute
			width 100%
			height 100%
			top 0
		&__wrapper
			position relative
			z-index 1
			height 80vh
			width 90vw
			background-image url('../img/banner.png')
			background-size cover
			background-position 10% 50%
			background-color black
			-webkit-box-shadow: 0px 0px 100px 100px rgba(0, 0, 0, 0.9) inset
			-moz-box-shadow: 0px 0px 100px 100px rgba(0, 0, 0, 0.9) inset
			box-shadow: 0px 0px 100px 100px rgba(0, 0, 0, 0.9) inset
		&__text
			position absolute
			top 25vh
			left 5%
			z-index 1
			background-color rgba(0,0,0,0.2)
			padding: 0 20px 20px 0
			.team
				display inline-block
				font-size calc(6vh  + 8vw) 
				text-transform uppercase
				background-color black
				padding 20px 10px 0 20px
				line-height 0.74
			.game
				font-size 7vh
				padding 0 20px 0 20px
		&__sponsors
			display flex
			align-items flex-end
			height 100%
			overflow hidden
			width 30%
			position relative
			background-color rgba(0,0,0,0.2)
			.wrapper
				display flex
				gap 20px
				padding 20px
				align-items flex-start
				div
					display inline-block
					img
						width 100%
		.back
			height 50vh
			position absolute
			z-index 1
			top 50%
			width 100%
			background-color $purple-block
	
	section.info
		background-color $purple-block
		.wrapper
			padding 5% 5%
			display flex
			flex-direction column
			justify-content space-between
			width 100%
			height 100%
			gap 60px
			
			h1.title
				width 80%
			p
				width 80%
				
			.outlined-button
				align-self flex-start


@media(max-width: 600px)
	section.info
		.wrapper
			h1.title
				min-width 100%
			p
				min-width 100%
				
@media(max-width: 1000px)
	.index
		//- delete sponsors when screen width < 1000 
		.banner
			&__sponsors
				opacity 0
				