header
	.navbar
		display flex
		font-size 1rem
		ul
			display flex
			width 100%
			overflow hidden
			justify-content center
			align-items center
			gap 10%
			margin-right 80px
			list-style-type: none
			li
				display inline-block
				a
					text-transform uppercase
					text-decoration none
					font-family 'Montserrat Bold', sans-serif
					color white
					font-weight bold
					&:hover
						color: darken(white, 40%)
					
		.logo
			padding 10px 40px
			img
				height 40px
				width 40px
				&:hover
					opacity: 0.6
					cursor pointer


@media (max-width: 600px)
	header
		.navbar
			padding 10px
			flex-direction column
			align-items center
			ul
				margin 0
				gap 2 vw
				flex-direction column