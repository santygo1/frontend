.slider-container
	max-width 100%
	position relative
	margin auto

	.slide
		display none
		background-color black
		box-shadow: 0px 0px 100px 100px $slider-line inset
		height 80%
		img
			width 100%
			object-fit cover
	.numbertext
		color #f2f2f2
		font-size 16px
		padding: 12px 12px
		position: absolute
		top 0
a.prev
a.next
	cursor pointer
	position absolute
	top 50%
	width auto
	margin-top -45px
	padding 16px
	color white
	font-weight bold
	font-size 48px
	transition 0.6s ease
	border-radius 0 3px 3px 0
	user-select none

.img_wrapper
	display inline-block
	width 100%
	height 100%
	position absolute
	top 0
	left 0
	box-shadow: 0px 0px 10vw 10vw rgba(0, 0, 0, 0.85) inset;
	
a.next
	right 0
	border-radius 3px 0 0 3px
	
a.prev:hover
a.next:hover
	background-color rgba(255,255,255,0.6)

.dot-dock
	position absolute
	bottom 2%
	left 50%
	margin-left -55px
	
.dot
	cursor pointer
	height 15px
	width 15px
	margin 0 2px
	background-color $slider-primary-details
	border-radius: 50%
	display: inline-block
	transition: background-color 0.6s ease

.active
.dot:hover 
	background-color $slider-active-circle
	
.fade
	animation-name fade
	animation-duration 1.5s

@keyframes fade {
  from {opacity: .4}
  to {opacity: 1}
}